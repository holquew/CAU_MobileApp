<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.ac.cau.sealife">

    <application
        android:allowBackup="true"
        android:icon="@drawable/orca"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <!-- 스플래시 액티비티 -->
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- 바다생태 페이지 -->
        <activity
            android:name=".SeaEco"
            android:label="SeaEcoActivity"></activity>
        <activity
            android:name=".Region"
            android:label="RegionActivity"></activity>
        <activity
            android:name=".MudflatInfo"
            android:label="MudflatInfoActivity"></activity>
        <activity
            android:name=".MudflatNow"
            android:label="MudflatNowActivity"></activity>
        <activity
            android:name=".CalendarActivity"
            android:label="CalendarActivity"></activity>
        <activity
            android:name=".SListView"
            android:label="ListViewActivity"></activity>
        <activity
            android:name=".DummyActivity"
            android:label="Dummy"></activity>

    </application>

</manifest>